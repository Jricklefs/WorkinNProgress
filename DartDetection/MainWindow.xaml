<Window x:Class="DartDetection.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DartDetection"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button Content="Open Camera Window" 
                Width="200" 
                Height="50" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Margin="5"
                Click="OpenCameraWindow_Click" />

            <Button Content="Open DartBoard Detection Window" 
                Width="200" 
                Height="50" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Margin="5"
                Click="OpenDartboardWindow_Click" />

            <!-- New Button for Dartboard Configuration -->
            <Button Content="Open Dartboard Configuration" 
                Width="200" 
                Height="50" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Margin="5"
                Click="OpenDartboardConfig_Click" />

            <Button Content="Camera Feed" 
            Width="200" 
            Height="50" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            Margin="5"
            Click="CameraFeedButton_Click" />
        </StackPanel>
    </Grid>
</Window>
